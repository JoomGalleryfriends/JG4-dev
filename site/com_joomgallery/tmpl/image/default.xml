                label="COM_JOOMGALLERY_CONFIG_IMAGE_INFORMATION"
                type="spacer"
                name="spacer3"
                hr="false"
                >
            </field>
            <field
                name="jg_detail_view_show_title"
                type="jgradio"
                useglobal="true"
                class="btn-group btn-group-yesno"
                label="JGLOBAL_TITLE"
                validate="options"
                >
                <option value="0">JNO</option>
                <option value="1">JYES</option>
            </field>
            <field
                name="jg_detail_view_show_category"
                type="jgradio"
                useglobal="true"
