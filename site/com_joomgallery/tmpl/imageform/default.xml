<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Image Form View" option="View">
      <message>
        <![CDATA[Form to create/add an image]]>
      </message>
    </layout>
    <fields name="request">
        <fieldset name="request" >
            <field name="item_id"
                   type="sql"
                   query="SELECT 0 as `id`, 'New Image' as `imgtitle` UNION SELECT `id`,`imgtitle` FROM #__joomgallery ORDER BY `id`"
                   key_field="id"
                   value_field="imgtitle"
                   label="COM_JOOMGALLERY_IMAGES"
                   require="true" >
            </field>
        </fieldset>
    </fields>
</metadata>
