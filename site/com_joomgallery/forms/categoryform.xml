<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Joomgallery\Component\Joomgallery\Administrator\Field">
  <fieldset>
    <field name="id"
           type="text"
           readonly="true"
           class="readonly"
           default="0"
           description="JGLOBAL_FIELD_ID_LABEL" />

    <field name="checked_out"
           type="hidden"
           filter="unset" />

    <field name="lft"
           type="hidden"
           filter="unset" />

    <field name="rgt"
           type="hidden"
           filter="unset" />

    <field name="level"
           type="hidden"
           filter="unset" />

    <field name="path"
           type="hidden"
           filter="unset" />

    <field name="in_hidden"
           type="hidden"
           filter="unset" />

    <field name="title"
           type="text"
           maxlength="255"
           filter="string"
           required="true"
           autofocus="true"
           label="JGLOBAL_TITLE"
           message="COM_JOOMGALLERY_CATMAN_ALERT_CATEGORY_MUST_HAVE_TITLE" />

    <field name="alias"
           type="text"
           maxlength="255"
           generator="title"
           label="JALIAS"
           description="JFIELD_ALIAS_DESC" />

    <field name="parent_id"
           type="jgcategory"
           children="false"
           default="1"
           label="JGLOBAL_SHOW_PARENT_CATEGORY_LABEL" />

    <field name="published"
           type="radio"
           layout="joomla.form.field.radio.switcher"
           class="btn-group"
           default="1"
           label="JPUBLISHED">
        <option value="0">JNO</option>
        <option value="1">JYES</option>
    </field>

    <field name="access"
           type="accesslevel"
           label="JFIELD_ACCESS_LABEL"
           description="JFIELD_ACCESS_DESC"
           size="1" />

    <field name="password"
           type="password"
           size="100"
           label="JGLOBAL_PASSWORD"
           description="COM_JOOMGALLERY_FIELDS_PASSWORD_DESC" />

    <field name="language"
           type="language"
           client="administrator"
           label="JGRID_HEADING_LANGUAGE" >
           <option value="*">JALL</option>
    </field>

    <field name="description"
           type="editor"
           cols="250"
           buttons="true"
           filter="JComponentHelper::filterText"
           label="JGLOBAL_DESCRIPTION"
           hide="pagebreak" />

    <field name="hidden"
           type="radio"
           layout="joomla.form.field.radio.switcher"
           default="0"
           class="btn-group"
           label="COM_JOOMGALLERY_HIDDEN"
           description="COM_JOOMGALLERY_FIELDS_CATEGORY_HIDDEN_DESC" >
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>

    <field name="exclude_toplist"
           type="radio"
           layout="joomla.form.field.radio.switcher"
           default="0"
           class="btn-group"
           label="COM_JOOMGALLERY_FIELDS_EXCLUDE_FROM_TOPLISTS"
           description="COM_JOOMGALLERY_FIELDS_EXCLUDE_FROM_TOPLISTS_DESC" >
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>

    <field name="exclude_search"
           type="radio"
           layout="joomla.form.field.radio.switcher"
           default="0"
           class="btn-group"
           label="COM_JOOMGALLERY_FIELDS_EXCLUDE_FROM_SEARCH"
           description="COM_JOOMGALLERY_FIELDS_EXCLUDE_FROM_SEARCH_DESC" >
      <option value="0">JNO</option>
      <option value="1">JYES</option>
    </field>

    <field name="thumbnail"
           type="jgimage"
           directory="/images/joomgallery/"
           label="COM_JOOMGALLERY_THUMBNAIL"
           description="COM_JOOMGALLERY_FIELDS_THUMBNAIL_DESC" />

    <field name="created_time"
           type="calendar"
           translateformat="true"
           showtime="true"
           size="22"
           filter="user_utc"
           label="JGLOBAL_FIELD_CREATED_LABEL" />

    <field name="modified_time"
           type="calendar"
           class="form-control"
           translateformat="true"
           showtime="true"
           size="22"
           readonly="true"
           filter="user_utc"
           label="JGLOBAL_FIELD_MODIFIED_LABEL" />

    <field name="metadesc"
           type="textarea"
           cols="40"
           rows="5"
           filter="safehtml"
           label="JGLOBAL_DESCRIPTION"
           description="JFIELD_META_DESCRIPTION_LABEL"
           maxlength="160"
           charcounter="true" />

    <field name="metakey"
           type="textarea"
           cols="40"
           rows="5"
           filter="string"
           label="JFIELD_META_KEYWORDS_LABEL"
           description="JFIELD_META_KEYWORDS_DESC" />

    <field name="robots"
           type="list"
           default="0"
           label="JFIELD_METADATA_ROBOTS_LABEL" >
        <option value="0">JGLOBAL_USE_GLOBAL</option>
        <option value="1">index, follow</option>
        <option value="2">noindex, follow</option>
        <option value="3">index, nofollow</option>
        <option value="4">noindex, nofollow</option>
    </field>

    <field name="params"
           type="subform"
           formsource="administrator/components/com_joomgallery/forms/subform_catparams.xml"
           layout="joomla.form.field.subform.default"
           label="COM_JOOMGALLERY_PARAMETERS" />

    <field name="version_note"
           type="text"
           label="JGLOBAL_FIELD_VERSION_NOTE_LABEL"
           description="JGLOBAL_FIELD_VERSION_NOTE_DESC"
           class="inputbox"
           size="45"
           labelclass="control-label" />
  </fieldset>

  <fieldset name="accesscontrol">
    <field name="asset_id"
           type="hidden"
           filter="unset" />

    <field name="rules"
           type="rules"
           label="JFIELD_RULES_LABEL"
           filter="rules"
           validate="rules"
           class="inputbox"
           component="com_joomgallery"
           section="category" />
  </fieldset>
</form>
