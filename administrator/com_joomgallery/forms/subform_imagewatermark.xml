<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset name="general">
    <field name="jg_watermarkpos"
           type="list"
           groupByFieldset="false"
           default="9"
           label="COM_JOOMGALLERY_CONFIG_WATERMARK_POSITION"
           description="COM_JOOMGALLERY_CONFIG_WATERMARK_POSITION_LONG" >
        <option value="1">COM_JOOMGALLERY_CONFIG_IMG_POSITION_TL</option>
        <option value="2">COM_JOOMGALLERY_CONFIG_IMG_POSITION_TC</option>
        <option value="3">COM_JOOMGALLERY_CONFIG_IMG_POSITION_TR</option>
        <option value="4">COM_JOOMGALLERY_CONFIG_IMG_POSITION_ML</option>
        <option value="5">COM_JOOMGALLERY_CONFIG_IMG_POSITION_MC</option>
        <option value="6">COM_JOOMGALLERY_CONFIG_IMG_POSITION_MR</option>
        <option value="7">COM_JOOMGALLERY_CONFIG_IMG_POSITION_LL</option>
        <option value="8">COM_JOOMGALLERY_CONFIG_IMG_POSITION_LC</option>
        <option value="9">COM_JOOMGALLERY_CONFIG_IMG_POSITION_LR</option>
    </field>

    <field name="jg_watermarkzoom"
           type="list"
           groupByFieldset="false"
           default="0"
           label="COM_JOOMGALLERY_RESIZING"
           description="COM_JOOMGALLERY_FIELDS_WATERMARK_RESIZING_DESC" >
        <option value="0">JNO</option>
        <option value="1">COM_JOOMGALLERY_CONFIG_RESIZE_BY_HEIGHT</option>
        <option value="2">COM_JOOMGALLERY_CONFIG_RESIZE_BY_WIDTH</option>
    </field>

    <field name="jg_watermarksize"
           type="number"
           groupByFieldset="false"
           default="15"
           filter="int"
           min="1"
           max="100"
           step="1"
           showon="jg_watermarkzoom:1,2"
           label="COM_JOOMGALLERY_CONFIG_WATERMARK_SIZE"
           description="COM_JOOMGALLERY_CONFIG_WATERMARK_SIZE_LONG" />

    <field name="jg_watermarkopacity"
           type="number"
           groupByFieldset="false"
           default="80"
           filter="int"
           min="1"
           max="100"
           step="1"
           label="COM_JOOMGALLERY_OPACITY"
           description="COM_JOOMGALLERY_CONFIG_WATERMARK_OPACITY_LONG" />
  </fieldset>
</form>
